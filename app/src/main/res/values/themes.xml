<resources>
    <style name="Theme.PPPB_UAS" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#015023</item>
        <item name="windowSplashScreenAnimatedIcon">@style/Theme.SplashScreen.IconBackground</item>

        <!-- Durasi -->
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="windowSplashScreenIconBackgroundColor">#015023</item>
        <!-- Post splash theme -->
        <item name="postSplashScreenTheme">@style/Theme.PPPB_UAS</item>

        <!-- Status & Nav bar -->
        <item name="android:statusBarColor">#015023</item>
        <item name="android:navigationBarColor">#015023</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources>